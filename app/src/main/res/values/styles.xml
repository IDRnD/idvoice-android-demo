<resources>

    <style name="IDVoice.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="android:windowBackground">@color/black_haze</item>
        <item name="colorPrimaryDark">@color/black_haze</item>
        <item name="android:colorAccent">@color/shamrock</item>
    </style>

    <style name="IDVoice.Theme.Launch" parent="IDVoice.AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="IDVoice.Widget.BackButton.Left" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:text">@string/back</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/boulder</item>
        <item name="icon">@drawable/round_arrow_back_ios_24</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

</resources>